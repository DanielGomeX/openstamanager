        end_date: '{{ calendar.end|date }}',

        ckeditorToolbar: [
            "heading", "|", "bold", "italic", "link", "bulletedList", "numberedList", "imageUpload", "blockQuote", "insertTable", "mediaEmbed", "|", "undo", "redo"
        ],

        tempo_attesa_ricerche: {{ setting('Tempo di attesa ricerche in secondi') }},
        select_url: "{{ path_for('ajax-select') }}",
        dataload_module_url: "{{ path_for('ajax-dataload-module', {'module_id': '|id_module|'}) }}",
