{% extends "layouts/guest.twig" %}

{% block title %}{{ "Accesso negato!"|trans }}{% endblock %}

{% block box_class %}card-warning text-center{% endblock %}
{% block box_header %}
    <h3 class="card-title">{{ 'Accesso negato!'|trans }}</h3>
{% endblock %}

{% block content %}
    <div class="text-center">
        <h3 class="text-muted">
            <small class="form-text">{{ 'Stai cercando di accedere ad una sezione verso cui non possiedi permessi sufficienti'|trans }}.</small>
        </h3>
        <br>

        <a class="btn btn-secondary" href="{{ path_for('login') }}">
            <i class="fa fa-chevron-left"></i> {{ 'Indietro'|trans }}
        </a>
    </div>
{% endblock %}

